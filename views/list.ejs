
<%- include('header'); -%>

  <div class="box" id="heading">
    <h1><%= title %></h1>
  </div>

  <div class="box">

    <% for(var i=0; i < newListItem.length; i++){ %>
        <div class="item">
          <input type="checkbox">
          <p><%= newListItem[i] %></p>
        </div>
    <% } %>


    <form class="item" action="/" method="post">
      <input type="text" name="addedItem" placeholder="New Item">
      <button type="submit" name="list" value=<%= title %>>+</button>
    </form>

  </div>

<%- include('footer'); %>
